<form class="{{cssClass}} kult-sheet kult-overrides-sheet" autocomplete="off">
  <header class="sheet-header">
    <script src="systems/kult4e/scripts/delete.js"></script>
    <script src="systems/kult4e/scripts/getAttribute.js"></script>
		<div class="header-container">
			<img class="picture" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
			<div class="title">
				<input class="character-name" name="name" type="text" value="{{actor.name}}" placeholder="Name" />
				<select class="character-archetype" name="data.appearance" value="{{data.appearance}}">
				{{#select data.appearance}}
					<option name="" value="" selected hidden disabled>Archetype</option>
					<option value="academic">the Academic</option>
					<option value="agent">the Agent</option>
					<option value="artist">the Artist</option>
					<option value="avenger">the Avenger</option>
					<option value="broken">the Broken</option>
					<option value="careerist">the Careerist</option>
					{{!-- <option value="criminal">the Criminal</option> --}}
					<option value="cursed">the Cursed</option>
					<option value="deceiver">the Deceiver</option>
					<option value="descendant">the Descendant</option>
					<option value="detective">the Detective</option>
					<option value="doll">the Doll</option>
					<option value="drifter">the Drifter</option>
					<option value="fixer">the Fixer</option>
					<option value="occultist">the Occultist</option>
					<option value="prophet">the Prophet</option>
					<option value="ronin">the Ronin</option>
					<option value="scientist">the Scientist</option>
					<option value="seeker">the Seeker</option>
					<option value="veteran">the Veteran</option>
					<option value="sleeper">the Sleeper</option>
					<option value="XX" disabled>-------------</option>
					<option value="abomination">the Abomination</option>
					<option value="deathMagician">the Death Magician</option>
					<option value="disciple">the Disciple</option>
					<option value="revenant">the Revenant</option>
        {{/select}}
        </select>
			</div>
			<div class="specs">				
        <div class="spec">
					<label class="spec-label" style="margin-left: 50%;">Age:</label>
					<input class="spec-input" name="data.attributes.age" type="text" value="{{data.attributes.age}}" placeholder="{{localize "kult4e.Age"}}">
        </div>			
        <div class="spec">
					<label class="spec-label">Forward:</label>
					<select class="spec-input" name="data.forward" value="{{data.forward}}">
					{{#select data.forward}}
						<option class="gold3" value="5">+5</option>
						<option class="gold3" value="4">+4</option>
						<option class="gold2" value="3">+3</option>
						<option class="gold2" value="2">+2</option>
						<option class="gold1" value="1">+1</option>
						<option class="gold1" value="0">~</option>
						<option class="red1" value="-1">−1</option>
						<option class="red1" value="-2">−2</option>
						<option class="red2" value="-3">−3</option>
						<option class="red3" value="-4">−4</option>
						<option class="red4" value="-5">−5</option>
					{{/select}}
        	</select>
        </div>			
        <div class="spec">
					<label class="spec-label">Modifier:</label>
					<select class="spec-input" name="data.sitmod" value="{{data.sitmod}}">
					{{#select data.sitmod}}
						<option class="gold3" value="5">+5</option>
						<option class="gold3" value="4">+4</option>
						<option class="gold2" value="3">+3</option>
						<option class="gold2" value="2">+2</option>
						<option class="gold1" value="1">+1</option>
						<option class="gold1" value="0">~</option>
						<option class="red1" value="-1">−1</option>
						<option class="red1" value="-2">−2</option>
						<option class="red2" value="-3">−3</option>
						<option class="red3" value="-4">−4</option>
						<option class="red4" value="-5">−5</option>
					{{/select}}
					</select>
        </div>
			</div>
		</div>
  </header>
  <div class="navigation-section">
    <a class="tabButton" data-tab="Front">Front</a>
    <a class="tabButton" data-tab="Bio">Bio</a>
    <a class="tabButton" data-tab="Relationships">Relationships</a>
    <a class="tabButton" data-tab="Assets">Assets</a>
    <a class="tabButton" data-tab="Notes">Notes</a>
    <a class="tabButton" data-tab="Advancement">Advancement</a>
  </div>
