      <div class="advantage-box">
        <div class="section-label">{{localize "kult4e.DarkSecrets"}}</div>
        <div class=" item-list darksecret-list">
          {{#each darksecrets as |darksecret id|}}
          {{> "systems/kult4e/templates/partials/darksecret-card.hbs" darksecret}}
          {{/each}}
        </div>
        <div class="section-label">{{localize "kult4e.Advantages"}}</div>
        <div class="item-list advantage-list">
          {{#each advantages as |advantage id|}}
          {{> "systems/kult4e/templates/partials/advantage-card.hbs" advantage}}
          {{/each}}
        </div>
        <div class="section-label">{{localize "kult4e.Disadvantages"}}</div>
        <div class="item-list disadvantage-list">
          {{#each disadvantages as |disadvantage id|}}
          {{> "systems/kult4e/templates/partials/disadvantage-card.hbs" disadvantage}}
          {{/each}}
        </div>
        <div class="section-label">{{localize "kult4e.Relationships"}}</div>
        <div class="item-list relationship-list">
          {{#each relationships as |relationship id|}}
          {{> "systems/kult4e/templates/partials/relationship-card.hbs" relationship}}
          {{/each}}
        </div>
      </div>
      <div class="right-middle-column">
        <div class="section-label">{{localize "kult4e.Wounds"}}</div>
        <div class="wound-entries">
          {{#each wounds}}
          <div class="wound-section">
            <label>{{localize "kult4e.MajorWound"}}</label>
            <select class="stabilized" name="data.attributes.woundstabilized.{{this}}"
            value="{{lookup ../data.attributes.woundstabilized this}}">
            {{#select (lookup ../data.attributes.woundstabilized this)}}
              <option value="true">{{localize "kult4e.Stabilized"}}</option>
              <option value="false">{{localize "kult4e.NotStabilized"}}</option>
            {{/select}}
            </select>
          </div>
          <div class="wound-name">
            <input type="text" name="data.attributes.woundtext.{{this}}" value="{{lookup ../data.attributes.woundtext this}}">
          </div>
          {{/each}}
          <div class="wound-section">
            <label>{{localize "kult4e.CriticalWound"}}</label>
            <select class="stabilized" name="data.attributes.criticalwoundstabilized"
              value="{{data.attributes.criticalwoundstabilized}}">
              {{#select data.attributes.criticalwoundstabilized}}
                <option value="true">{{localize "kult4e.Stabilized"}}</option>
                <option value="false">{{localize "kult4e.NotStabilized"}}</option>
              {{/select}}
            </select>
          </div>
          <div class="wound-name">
            <input type="text" name="data.attributes.criticalwound" value="{{data.attributes.criticalwound}}">
          </div>
        </div>
        <div class="flex-column stability-section">
          <div class="section-label">{{localize "kult4e.Stability"}}</div>
          <div>
            <select name="data.stability.value" value="{{data.stability.value}}">{{#select data.stability.value}}
              <option value="0">{{localize "kult4e.StabilityComposed"}}</option>
              <option value="1">{{localize "kult4e.StabilityUneasy"}}</option>
              <option value="2">{{localize "kult4e.StabilityUnfocused"}}</option>
              <option value="3">{{localize "kult4e.StabilityShaken"}}</option>
              <option value="4">{{localize "kult4e.StabilityDistressed"}}</option>
              <option value="5">{{localize "kult4e.StabilityNeurotic"}}</option>
              <option value="6">{{localize "kult4e.StabilityAnxious"}}</option>
              <option value="7">{{localize "kult4e.StabilityIrrational"}}</option>
              <option value="8">{{localize "kult4e.StabilityUnhinged"}}</option>
              <option value="9">{{localize "kult4e.StabilityBroken"}}</option>
              {{/select}}
            </select>
            <a class="stability-minus" title="{{localize "kult4e.MinusStability"}}"><i class="fas fa-minus-circle"></i></a>
            <a class="stability-plus" title="{{localize "kult4e.PlusStability"}}"><i class="fas fa-plus-circle"></i></a>
          </div>
        </div>
