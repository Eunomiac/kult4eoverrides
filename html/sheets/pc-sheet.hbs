    <div class="bottom-section">
      <div class="move-section">
        <div class="section-label">{{localize "kult4e.Moves"}}</div>
        <div class="item-list move-list">
          {{#each moves as |move id|}}
          {{#if (eq move.type "move")}}
          {{> "systems/kult4e/templates/partials/move-card.hbs" move}}
          {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
    <div class="two-column">
      <div class="weapon-section">
        <div class="section-label">{{localize "kult4e.Weapons"}}</div>
        <div class=" item-list weapon-list">
          {{#each weapons as |weapon id|}}
          {{> "systems/kult4e/templates/partials/weapon-card.hbs" weapon}}
          {{/each}}
        </div>
      </div>
      <div class="gear-section">
        <div class="section-label">{{localize "kult4e.Gear"}}</div>
        <div class=" item-list weapon-list">
          {{#each gear as |gear id|}}
