<div class="card gear-card">
  <div class="move-info item-name" data-item-id="{{data._id}}">
    <span class="weapon-column">{{data.name}}</span>
    {{#if data.data.ammo.max}}
      <span class="weapon-column">{{localize "kult4e.Uses"}} {{data.data.ammo.value}}/{{data.data.ammo.max}}</span>
    {{/if}}
    <div>
      <a class="item-control item-post" title="{{localize "kult4e.ShowItem"}}"><i class="far fa-comment-alt"></i></a>
		{{#if isSheetOpen}}
      <a class="item-control item-delete" title="{{localize "kult4e.DeleteItem"}}"><i class="fas fa-trash"></i></a>
      <a class="item-control item-edit" title="{{localize "kult4e.EditItem"}}"><i class="fas fa-edit"></i></a>
			{{/if}}
    </div>
  </div>
</div>